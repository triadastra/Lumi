<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox - Enabled for security, but with necessary permissions -->
    <key>com.apple.security.app-sandbox</key>
    <true/>
    
    <!-- Network Access - REQUIRED for OpenAI, Anthropic, Gemini, and Ollama -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Note: iCloud/HealthKit removed to allow building on Personal Development Teams -->

    <!-- Required for AppleScript automation and System Events -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>
    
    <!-- File Access for Agent Operations -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Required for Debugging -->
    <key>com.apple.security.get-task-allow</key>
    <true/>
</dict>
</plist>
